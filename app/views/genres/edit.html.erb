<h1>Genres#edit</h1>

<p>「<%= @genre.name %>」ジャンルの編集</p>

<% if @genre.errors.any? %>
<ui>
  <% @genre.errors.full_messages.each do |err| %>
    <li><%= err %></li>
  <% end %>
</ui>
<% end %>

<table>
<%= form_for(@genre, url:{controller: 'genres', action: 'edit'}) do |form|%>
<tr>
  <th>name</th>
  <td><%= form.text_field :name %></td>
</tr>
<tr>
  <th>memo</th>
  <td><%= form.text_field :memo %></td>
</tr>
<tr>
  <th></th>
  <td><%=form.submit "送信" %></td>
</tr>
<% end %>
</table>
