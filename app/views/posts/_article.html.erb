<table class="table-responsive table table-striped table-bordered">>
  <%#<table class="table table-condensed">%>

  <thead>
    <tr>
      <th>Title</th>
      <th>いいね</th>
      <th>Summary</th>
      <th>Content</th>
      <th>User</th>
      <th>Genre</th>
      <th colspan="6"></th>

      <%#<th width="10%">Title</th>%>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><span class="fa fa-heart like-btn"><%= post.likes.count %></span>件</td>
        <td><%= post.summary %></td>
        <td><%= post.content %><%= link_to 'もっと見る', post %></td>
        <td><%= post.user.nickname %></td>
        <td><%= post.genre.try(:name) %></td>
        <!--
          <% if post.genre.present? %>
            <td><%= post.genre.name %></td>
          <% end %>
        -->
        <td><%#= link_to(post.genre.try(:name), "/@genres/#{@genre.id}", controller: "posts", action: "show", id: @genre.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
